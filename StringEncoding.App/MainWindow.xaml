<Window x:Class="StringEncoding.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StringEncoding.App"
        mc:Ignorable="d"
        Title="Id Encoding" Height="350" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label x:Name="lblPlainId" Content="Plain Id" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtPlainId" HorizontalAlignment="Left" Margin="10,36,0,0" Padding="3,3,3,3" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="btnEncode" Content="Encode" HorizontalAlignment="Left" Margin="10,65,0,0" Padding="3,3,3,3" VerticalAlignment="Top" Click="btnEncodeClickHandler"/>
            <Label x:Name="lblEncodedId" Content="Encoded Id" HorizontalAlignment="Left" Margin="203,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtEncodedId" HorizontalAlignment="Left" Margin="203,36,0,0" Padding="3,3,3,3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
            <Button x:Name="btnDecode" Content="Decode" HorizontalAlignment="Left" Margin="203,65,0,0" Padding="3,3,3,3" VerticalAlignment="Top" Click="btnDecodeClickHandler"/>
            <CheckBox x:Name="checkUseLongId" Content="Use long Id" HorizontalAlignment="Left" Margin="426,40,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label Content="Minimum length" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtMinLength" HorizontalAlignment="Left" Margin="10,36,0,0" Padding="3,3,3,3" TextWrapping="Wrap" Text="7" VerticalAlignment="Top" Width="120"/>
            <Label Content="Salt" HorizontalAlignment="Left" Margin="203,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtSalt" HorizontalAlignment="Left" Margin="203,36,0,0" Padding="3,3,3,3" TextWrapping="Wrap" Text="some-salt" VerticalAlignment="Top" Width="180"/>
            <Label Content="Profile" HorizontalAlignment="Left" Margin="426,10,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="comboProfile" HorizontalAlignment="Left" Margin="426,37,0,0" Padding="3,3,3,3" VerticalAlignment="Top" Width="120" SelectionChanged="comboProfileChangeHandler"/>
            <Label Content="Profile name" HorizontalAlignment="Left" Margin="203,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtProfileName" HorizontalAlignment="Left" Margin="203,96,0,0" Padding="3,3,3,3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
            <Button x:Name="btnSaveProfile" Content="Save profile" HorizontalAlignment="Left" Margin="426,96,0,0" Padding="3,3,3,3" VerticalAlignment="Top" Click="btnSaveProfileClickHandler"/>
            <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="10,96,0,0" Padding="3,3,3,3" VerticalAlignment="Top" Background="#9a1313" Foreground="White" Click="btnDeleteClickHandler" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
